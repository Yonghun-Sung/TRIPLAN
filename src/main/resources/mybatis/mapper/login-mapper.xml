<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.site.triplan.mapper.LoginMapper">
    <!--로그인-->
    <select id="loginUser" resultType="java.lang.String">
        SELECT id
        FROM user_info
        WHERE id LIKE #{id} AND pw LIKE #{pw}
    </select>

    <!--닉네임 가져오기(아이디 사용): header-->
    <select id="getNickname" resultType="java.lang.String">
        SELECT nickname
        FROM user_info
        WHERE id LIKE #{id}
    </select>
</mapper>