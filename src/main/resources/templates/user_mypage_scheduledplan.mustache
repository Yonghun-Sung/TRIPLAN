                    <!--                        &lt;!&ndash;<button type="button" class="btn btn-outline-primary">선택삭제</button>&ndash;&gt;-->
                    <!--                        <button type="button" class="btn btn-outline-primary" id="pick-btn">전체선택</button>-->
                    <!--                        <button type="button" class="btn btn-primary" id="delete-btn">삭제</button>-->
                    <!--                    </div>-->

