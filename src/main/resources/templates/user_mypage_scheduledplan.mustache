    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog planlist">
        <div class="container" data-aos="fade-up">
            <div class="col-lg-12" data-aos="fade-up" data-aos-delay="400">
                <div class="sidebar">
                    <!--프로필이랑 나의 일정, 댓글, 좋아요한 글 인덱스 버튼-->
                    <div class="top-container">
                        <div class="profilePhotoContainer">
                            <div class="profilePhoto-text" id="profilePhoto">{{firstletterNickname}}</div>
                        </div>
                        <div class="text">{{userprofile.nickname}}</div><!--여기도 정적으로 넣음-->
                        <button class="btn-normal" onclick="location.href='/triplan/myprofile'">프로필 수정</button>
                    </div>
                    <div class="row">
                        <div class="index-section">
                            <!--나의 일정-->
                            <div class="index-circle" onclick="location.href='/triplan/mypage'">
                                <h6><!--여기에 마이로는 h5 style="폰트패밀리넣음"-->
                                    <b>나의 일정</b>
                                </h6>
                                <div>
                                    <h4 style="line-height: 1; font-weight: 700" id="myPlan">{{plancount}}</h4><!--내가 정적으로 걍 6넣음-->
                                </div>
                            </div>
                            <!--나의 댓글-->
                            <div class="index-circle" onclick="location.href='/triplan/mypage/reply'">
                                <h6>
                                    <b>나의 댓글</b>
                                </h6>
                                <div>
                                    <h4 style="line-height: 1; font-weight: 700" id="myReply">{{replycount}}</h4><!--내가 정적으로 걍 5넣음-->
                                </div>
                            </div>
                            <!--좋아요한 일정-->
                            <div class="index-circle" onclick="location.href='/triplan/mypage/like'">
                                <h6><!--여기에 마이로는 h5 style="폰트패밀리넣음"-->
                                    <b>좋아요한 일정</b>
                                </h6>
                                <div>
                                    <h4 style="line-height: 1; font-weight: 700" id="myLike">{{likecount}}</h4><!--내가 정적으로 걍 10넣음-->
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--"좋아요한 일정"-->
                    <div class="section-title-container">
                        <!--<h3 class="sidebar-title-rep-like"> &lt;!&ndash;css추가&ndash;&gt;
                            <b>나의 일정</b>
                        </h3>-->
                        <h3 class="sidebar-title"  onclick="location.href='/triplan/mypage'">다가올 일정</h3>
                        <!--              <h3 class="sidebar-title">
                                        <b>다가올 일정</b>
                                      </h3>-->
                        <h3 class="sidebar-title2"> | </h3> <!--sidebar-title2클래스 지윤 새로 추가-->
                        <h3 class="sidebar-title"  onclick="location.href='/triplan/mypage/completedplans'">완료된 일정</h3>
                    </div>
                    <!--                    &lt;!&ndash;삭제 버튼&ndash;&gt;-->
