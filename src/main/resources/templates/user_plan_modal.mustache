    <script>
    </script>
</head>
<body>
        <!-- ======= Header ======= -->
        {{>user_header}}

        <div class="modal fade" id="create-plan-modal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">일정 만들기</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="title" class="col-form-label">제목</label>
                            <input type="text" class="form-control" name="title" id="title">
                        </div>
                        <div class="mb-3">
                            <label for="areacode" class="col-form-label">지역</label>
                            <select id="areacode" class="form-select form-select-sm"
                                    aria-label=".form-select-sm example">
                                <option selected value="">--- 지역 ---</option>
                                {{#areaList}}
                                    <option value="{{code}}" data-loc_x="{{loc_x}}" data-loc_y="{{loc_y}}" data-zoom="{{zoom}}">{{name}}</option>
                                {{/areaList}}
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="col-form-label">기간</label>
                            <input type="text" class="datepicker date form-control" id="start_dt" name="start_dt"
                                   placeholder="시작 날짜 선택" readonly>
                            <span id="tilde">~</span>
                            <input type="text" class="datepicker date form-control" id="end_dt" name="end_dt"
                                   placeholder="마지막 날짜 선택" readonly>
                        </div>
                        <div class="pw-explan">
                            <button type="button" id="create-plan-btn" class="modal-btn basic-btn">일정 만들기</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/aos/aos.js"></script>
    <script src="/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="/js/user/main.js"></script>

    <script src="/js/user/plan_modal.js"></script>

</body>
